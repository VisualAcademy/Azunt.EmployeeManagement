{
    "Database": {
        "InitializeOnStartup": true,
        "Initializers": [
            {
                "Name": "Employees",
                "ForMaster": true,
                "EnableSeeding": true
            },
            {
                "Name": "Resources",
                "ForMaster": true
            }
        ]
    },

    "ConnectionStrings": {
        "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=EmployeeManagement;Trusted_Connection=True;MultipleActiveResultSets=true"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*"
}
